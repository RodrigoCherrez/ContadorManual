<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContadorManual.Gui.MainPage"
             Title="ContadorElpollo">


    <VerticalStackLayout
       Margin="24">
        <Label
        Text="conteo"
        FontSize="Medium"/>
        <Border 
            Margin="0,24,0,36"
            Stroke="Gray"
            StrokeThickness="3">
            <Label 
                Text="0" 
                HorizontalOptions="Center"
                Margin=" 0,24"
                FontSize="Large"
                FontAttributes="Bold"
                x:Name="ConteoLabel"/>
        </Border>
        <HorizontalStackLayout
